generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId     String     @id @default(uuid())
  name       String
  email      String     @unique
  Checkboxes Checkbox[]
}

model Checkbox {
  checkboxId String  @id @default(uuid())
  row        Int
  col        Int
  checked    Boolean @default(false)
  userId     String?
  user       User?   @relation(fields: [userId], references: [userId])
}
